@model LINQ_Ejemplo.Models.libros
@{
    ViewBag.Title = "InsertarLibro";
}
<h2>Comando Select (Insertar nuevo libro)</h2>

@using (Html.BeginForm("InsertarLibro", "Inicio", FormMethod.Post))
 {
     if (ViewData["regresar"].ToString() != "index")
      {
          <div class="form-group">
              Titulo:
              <p></p>
              @Html.EditorFor(model => model.titulo, new {@class = "col-lg-12"})
          </div>

          <div class="form-group">
              Tematica:
              <p></p>
              @Html.DropDownList("tema", "Seleccione un tema")
          </div>
          <div class="form-group">
              Editorial:
              <p></p>
              @Html.DropDownList("edito", "Seleccione editorial")
          </div>
          <div class="form-group">
              Editorial:
              <p></p>
              @Html.DropDownList("idioma", "Seleccione un idioma")
          </div>
          <div class="form-group">
              Autor:
              <p></p>
              @Html.DropDownList("autor", "Seleccione un autor")
          </div>
          <div class="form-group">
              precio:
              <p></p>
              @Html.EditorFor(model => model.precio)
          </div>
          <div class="form-group">
              Año:
              <p></p>
              @Html.EditorFor(model => model.year)
          </div>
          <div class="form-group">
              <fieldset>
                  @Html.RadioButtonFor(model => model.donado, 1) Si
                  @Html.RadioButtonFor(model => model.donado, 0) No
              </fieldset>
          </div>
          <button type="submit" class="btn btn-primary" value="submit">Agregar</button>

      }
      
      if (ViewData["regresar"].Equals("index"))
      {
          <div class="alert alert-success" role="alert">
              El libro se a agregado con exito, Volver a @Html.ActionLink("Inicio", "Index", "Inicio", null)
          </div> 
      }
 }

